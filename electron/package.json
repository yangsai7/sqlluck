{
  "name": "sqlluck",
  "version": "1.0.0",
  "description": "跨平台 MySQL 客户端（基于 Electron）",
  "main": "src/main.js",
  "homepage": "https://github.com/json7/sqlluck",
  "author": {
    "name": "json7",
    "email": "json7@foxmail.com"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development electron src/main.js",
    "build": "electron-builder --win",
    "start": "electron src/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "dependencies": {
    "electron-updater": "^6.1.1"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^25.3.0",
    "electron-builder": "^24.4.0"
  },
  "build": {
    "appId": "com.json7.sqlluck",
    "productName": "sqlluck",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!src/**/*.ts",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "../frontend/dist",
        "to": "frontend",
        "filter": ["**/*"]
      },
      {
        "from": "../backend/dist/server.exe",
        "to": "server.exe"
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/mac/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icons/win/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}